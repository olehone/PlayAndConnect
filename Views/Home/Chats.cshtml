        width: 60px;
        height: 60px;
        margin-right: 10px;
        border-radius: 50%;
        overflow: hidden;
    }

    .user-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        cursor: pointer;
    }

    .user-details {
        flex-grow: 1;
    }

    .chat-login {
        font-size: 18px;
        margin-bottom: 5px;
    }

    .chat-message {
        font-size: 14px;
        color: gray;
    }

    .chat-new-message {
        font-size: 15px;
        color: gray;
        font-weight: bold;
    }
    .system-message{
        color: rgb(77, 55, 187);
    }
    .own-message{
