    .chat-item {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        transition: background-color 0.3s;
        background-color: #f9f9f9;
    }

    .chat-item:hover:not(.selected) {
        background-color: #f5f5f5;
    }

    .selected {
        background-color: #ebebeb;
    }

    .user-info {
        display: flex;
        align-items: center;
    }

