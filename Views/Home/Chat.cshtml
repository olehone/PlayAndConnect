.chat-item {
  /* Стилі для блоку чату */
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
  padding: 10px;
  background-color: #f2f2f2;
  border-radius: 5px;
}

.user-info {
  /* Стилі для інформації про користувача */
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  padding: 5px;
  background-color: #dcdcdc;
  border-radius: 5px;
}

.avatar {
  /* Стилі для аватарки */
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

.user-details {
  /* Стилі для деталей користувача */
  flex-grow: 1;
}

.chat-login {
  /* Стилі для логіну користувача */
  font-weight: bold;
  font-size: 16px;
}

.chat-message {
  /* Стилі для повідомлення */
  font-size: 14px;
  margin-bottom: 5px;
}

.own-message {
  /* Стилі для свого повідомлення */
  text-align: right;
}

.other-message {
  /* Стилі для чужого повідомлення */
  text-align: left;
}

.message-time {
  /* Стилі для часу повідомлення */
  font-size: 12px;
  color: #888;
  margin-top: 5px;
}

.chat-form {
  /* Стилі для форми введення повідомлень */
  margin-top: 10px;
}

