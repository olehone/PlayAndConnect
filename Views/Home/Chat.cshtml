@using PlayAndConnect.ViewModels
@model List<MessageViewModel>
<div class = "chat-info">
    <div class="chat-item" data-login="ViewBag.Login">
        <div class="user-info">
            <div class="avatar">
                <a href="@Url.Action("Account", "Home", new { login = ViewBag.Login })">
                    <img class="user-image" src="ViewBag.ImagePath" style="cursor: pointer;">
                </a>
            </div>
            <div class="user-details">
                <h3 class="chat-login">ViewBag.Login</h3>
            </div>
        </div>
    </div>
</div>
